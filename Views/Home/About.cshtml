@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Giới thiệu"];
}

<section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-0 bread">@Localizer["Giới thiệu"]</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <h2 class="mb-4">@Localizer["Về Chúng tôi"]</h2>
                <p>@Localizer["Khách sạn chúng tôi tự hào là điểm đến lý tưởng cho du khách trong và ngoài nước. Với vị trí thuận lợi và dịch vụ chất lượng cao, chúng tôi cam kết mang đến cho quý khách trải nghiệm lưu trú tuyệt vời nhất."]</p>
                <p>@Localizer["Được thành lập từ năm 2010, chúng tôi không ngừng nâng cao chất lượng dịch vụ và tiện nghi để đáp ứng nhu cầu ngày càng cao của khách hàng. Đội ngũ nhân viên chuyên nghiệp và thân thiện của chúng tôi luôn sẵn sàng phục vụ quý khách 24/7."]</p>
                <h3 class="mb-3 mt-5">@Localizer["Tầm nhìn và Sứ mệnh"]</h3>
                <p>@Localizer["Tầm nhìn của chúng tôi là trở thành một trong những khách sạn hàng đầu tại Việt Nam, mang đến trải nghiệm lưu trú đẳng cấp và độc đáo cho mọi du khách."]</p>
                <p>@Localizer["Sứ mệnh của chúng tôi là cung cấp dịch vụ lưu trú chất lượng cao, tạo ra không gian thoải mái và sang trọng, đồng thời góp phần quảng bá văn hóa và du lịch Việt Nam đến với bạn bè quốc tế."]</p>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 ftco-animate">
                <h3 class="mb-3">@Localizer["Dịch vụ của chúng tôi"]</h3>
                <ul>
                    <li>@Localizer["Phòng nghỉ tiện nghi và hiện đại, phù hợp với mọi nhu cầu của khách hàng."]</li>
                    <li>@Localizer["Nhà hàng sang trọng với các món ăn đa dạng từ ẩm thực Việt Nam đến quốc tế."]</li>
                    <li>@Localizer["Dịch vụ spa và chăm sóc sức khỏe giúp quý khách thư giãn sau một ngày dài."]</li>
                    <li>@Localizer["Hỗ trợ tổ chức sự kiện và hội nghị với trang thiết bị hiện đại."]</li>
                </ul>
            </div>
            <div class="col-md-6 ftco-animate">
                <h3 class="mb-3">@Localizer["Đội ngũ nhân viên"]</h3>
                <p>@Localizer["Chúng tôi tự hào có đội ngũ nhân viên chuyên nghiệp, tận tâm và luôn sẵn sàng hỗ trợ quý khách. Với phương châm 'Khách hàng là ưu tiên hàng đầu', mỗi thành viên của chúng tôi đều nỗ lực để mang đến sự hài lòng tuyệt đối cho quý khách."]</p>
                <p>@Localizer["Chúng tôi thường xuyên tổ chức các chương trình đào tạo và phát triển kỹ năng cho nhân viên, đảm bảo rằng họ luôn đáp ứng được tiêu chuẩn phục vụ cao nhất."]</p>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12 ftco-animate">
                <h3 class="mb-3">@Localizer["Cam kết của chúng tôi"]</h3>
                <p>@Localizer["Chúng tôi cam kết mang đến cho quý khách:"]</p>
                <ul>
                    <li>@Localizer["Chất lượng dịch vụ cao cấp với giá cả hợp lý."]</li>
                    <li>@Localizer["Môi trường lưu trú an toàn, sạch sẽ và thân thiện."]</li>
                    <li>@Localizer["Sự hỗ trợ tận tình từ đội ngũ nhân viên mọi lúc, mọi nơi."]</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h2 class="mb-4">@Localizer["Liên hệ với chúng tôi"]</h2>
                <p>@Localizer["Nếu bạn có bất kỳ câu hỏi hoặc yêu cầu nào, đừng ngần ngại liên hệ với chúng tôi. Chúng tôi luôn sẵn sàng hỗ trợ!"]</p>
                <p>
                    <a href="mailto:imperiallotus123@gmail.com" class="btn btn-primary">@Localizer["Gửi email cho chúng tôi"]</a>
                </p>
            </div>
        </div>
    </div>
</section>

