@using Microsoft.AspNetCore.Mvc.Localization
@model List<WebKhachSan.Models.Room>
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Home"];
}

<div class="hero-wrap js-fullheight" style="background-image: url('/images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-11 ftco-animate text-center">
                <h1 class="mb-4">@Localizer["WelcomeMessage"]</h1>
                <p><a href="#" class="btn btn-primary mr-md-4 py-3 px-4">@Localizer["LearnMore"] <span class="ion-ios-arrow-forward"></span></a></p>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center pb-5 mb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h2>@Localizer["OurServices"]</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 d-flex services align-self-stretch px-4 ftco-animate">
                <div class="d-block services-wrap text-center">
                    <div class="img" style="background-image: url(/images/services-1.jpg);"></div>
                    <div class="media-body py-4 px-3">
                        <h3 class="heading">@Localizer["MapDirection"]</h3>
                        <p>@Localizer["MapDirectionDescription"]</p>
                        <p><a href="#" class="btn btn-primary">@Localizer["ReadMore"]</a></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex services align-self-stretch px-4 ftco-animate">
                <div class="d-block services-wrap text-center">
                    <div class="img" style="background-image: url(/images/services-2.jpg);"></div>
                    <div class="media-body py-4 px-3">
                        <h3 class="heading">@Localizer["AccomodationServices"]</h3>
                        <p>@Localizer["AccomodationServicesDescription"]</p>
                        <p><a href="#" class="btn btn-primary">@Localizer["ReadMore"]</a></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex services align-self-stretch px-4 ftco-animate">
                <div class="d-block services-wrap text-center">
                    <div class="img" style="background-image: url(/images/services-3.jpg);"></div>
                    <div class="media-body py-4 px-3">
                        <h3 class="heading">@Localizer["GreatExperience"]</h3>
                        <p>@Localizer["GreatExperienceDescription"]</p>
                        <p><a href="#" class="btn btn-primary">@Localizer["ReadMore"]</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container-fluid px-md-0">
        <div class="row no-gutters justify-content-center pb-5 mb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h2>@Localizer["FeaturedRooms"]</h2>
            </div>
        </div>
        <div class="row no-gutters">
            @foreach (var room in Model)
            {
                <div class="col-lg-6">
                    <div class="room-wrap d-md-flex">
                        <a href="@Url.Action("Details", "Room", new { id = room.Id })" class="img" style="background-image: url(@room.ImageUrl);"></a>
                        <div class="half @(Model.IndexOf(room) % 2 == 0 ? "left-arrow" : "right-arrow") d-flex align-items-center">
                            <div class="text p-4 p-xl-5 text-center">
                                <p class="star mb-0">
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        <span class="fa fa-star"></span>
                                    }
                                </p>
                                <p class="mb-0"><span class="price mr-1">@room.PricePerNight.ToString("C0")</span> <span class="per">@Localizer["PerNight"]</span></p>
                                <h3 class="mb-3"><a href="@Url.Action("Details", "Room", new { id = room.Id })">@room.Name</a></h3>
                                <ul class="list-accomodation">
                                    <li><span>@Localizer["MaxCapacity"]:</span> @room.Capacity @Localizer["Persons"]</li>
                                    <li><span>@Localizer["Size"]:</span> @room.Size m2</li>
                                    <li><span>@Localizer["View"]:</span> @room.View</li>
                                    <li><span>@Localizer["BedType"]:</span> @room.BedType</li>
                                </ul>
                                <p class="pt-1"><a href="@Url.Action("Details", "Room", new { id = room.Id })" class="btn-custom px-3 py-2">@Localizer["ViewRoomDetails"] <span class="icon-long-arrow-right"></span></a></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



